<div class="show_bg row">
    <div class="show_title container">
        <h1><%= @job.title %></h2>
    </div>
</div>
<div class="container">
    <hr>

    <div class="group">
        <% if current_user && current_user == @job.user.email %>
        <%= link_to("编辑", edit_job_path(@job), class: "btn btn-default pull-right") %>
        <% end %>
        <%= link_to("应征", new_job_resume_path(@job), class: "btn btn-default pull-right") %>

    </div>

    <h2><%= @job.title %></h2>
    <p style="font-size:10px; margin-bottom:30px;">创建时间:<%= @job.created_at%></p>
    <p>
        <strong>薪俸上限：</strong><%= @job.wage_upper_bound %>元</p>
    <p>
        <strong>薪俸下限：</strong><%= @job.wage_lower_bound %>元</p>
    <p>
        <strong>联系方式：</strong><%= @job.contact_email %></p>
    <hr>
    <p>
        <h4>需求描述：</h4>
        <blockquote id="description">
            <%= simple_format(@job.description) %>
        </blockquote>
    </p>
</div>
